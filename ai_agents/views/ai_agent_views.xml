<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Agent Tree View -->
    <record id="view_ai_agent_tree" model="ir.ui.view">
        <field name="name">ai.agent.tree</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <tree string="AI Agents">
                <field name="name"/>
                <field name="agent_type"/>
                <field name="model_provider"/>
                <field name="conversation_count"/>
                <field name="satisfaction_score"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- AI Agent Form View -->
    <record id="view_ai_agent_form" model="ir.ui.view">
        <field name="name">ai.agent.form</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <form string="AI Agent">
                <header>
                    <button name="train" string="Train Agent" type="object" class="btn-primary"/>
                    <button name="reset_analytics" string="Reset Analytics" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_conversations" icon="fa-comments">
                            <field name="conversation_count" widget="statinfo" string="Conversations"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_type"/>
                            <field name="active"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="model_provider"/>
                            <field name="model_name"/>
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration">
                            <group>
                                <field name="system_prompt" widget="html"/>
                                <field name="auto_learn"/>
                                <field name="context_window"/>
                            </group>
                        </page>
                        <page string="Knowledge Base">
                            <field name="knowledge_base_ids"/>
                        </page>
                        <page string="Permissions">
                            <group>
                                <field name="department_ids"/>
                                <field name="user_ids"/>
                            </group>
                        </page>
                        <page string="Analytics">
                            <group>
                                <field name="conversation_count"/>
                                <field name="avg_response_time"/>
                                <field name="satisfaction_score"/>
                            </group>
                        </page>
                        <page string="Conversations">
                            <field name="conversation_ids">
                                <tree>
                                    <field name="create_date"/>
                                    <field name="user_id"/>
                                    <field name="user_message"/>
                                    <field name="status"/>
                                    <field name="satisfaction_rating"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- AI Agent Action -->
    <record id="action_ai_agent" model="ir.actions.act_window">
        <field name="name">AI Agents</field>
        <field name="res_model">ai.agent</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Agent
            </p>
            <p>
                AI Agents can help automate conversations, provide customer support,
                assist with medical queries, and much more.
            </p>
        </field>
    </record>
</odoo> 